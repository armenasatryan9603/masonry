{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "types": ["jest", "@testing-library/jest-dom"],
    "module": "commonjs"
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
